---
import Card from "@ui/card.astro";
import { ArrowRight, Clock, Github, Linkedin, Mail } from "@ui/icon.astro";
import LinkButton from "@ui/link.astro";
import Section from "@/components/section.astro";
---

<Section id="contact" title="Contacto" className="max-w-4xl">
  <Card className="bg-card/50 backdrop-blur border-border/50 max-w-2xl mx-auto">
    <Card variant="content" className="pt-8 pb-8">
      <div class="space-y-6">
        <div class="text-sm text-purple-400 mb-4">
          {"~/contact $ let's_build_something_amazing"}
        </div>

        <p class="text-lg text-muted-foreground">
          Tengo <strong class="highlight">disponibilidad inmediata</strong> para
          proyectos nuevos. Hablemos sobre c√≥mo puedo ayudarte a alcanzar tus objetivos.
        </p>

        <div
          class="flex items-center justify-center gap-2 text-sm text-muted-foreground"
        >
          <Clock class="h-4 w-4 text-green-400" />

          <span class="leading-relaxed"
            >Respuesta garantizada en menos de 24 horas</span
          >
        </div>

        <div class="flex flex-col sm:flex-row justify-center gap-4 pt-4">
          <LinkButton
            href="mailto:carralerocristianx@gmail.com"
            className="group"
          >
            <Mail class="h-4 w-4" />
            Enviar un mensaje

            <ArrowRight
              class="ml-0.5 h-4 w-4 group-hover:translate-x-1 transition-transform"
            />
          </LinkButton>

          <LinkButton
            href="https://www.linkedin.com/in/carralerocristianx/"
            target="_blank"
            variant="outline"
          >
            <Linkedin class="h-4 w-4 mr-2" />

            LinkedIn
          </LinkButton>

          <LinkButton
            href="https://github.com/criss8X"
            target="_blank"
            variant="outline"
          >
            <Github class="h-4 w-4 mr-2" />

            GitHub
          </LinkButton>
        </div>
      </div>
    </Card>
  </Card>
</Section>
