---
import { Github, Palette, Terminal, Zap } from "@/components/icon.astro";
import SkillCard from "./skill-card.astro";
---

<section id="skills" class="container mx-auto max-w-6xl px-4 py-20">
  <div class="text-center space-y-12">
    <h2 class="font-console text-3xl md:text-4xl font-bold">
      <span class="text-purple-400">// </span>Habilidades & Tecnologías
    </h2>

    <div class="grid md:grid-cols-2 gap-8">
      {/* Frontend */}
      <SkillCard
        title="Frontend Development"
        description="Interfaces modernas y experiencias de usuario excepcionales"
        stack={[
          "React",
          "TypeScript",
          "Tailwind CSS",
          "React Router",
          "HTML5 & SEO",
          "Next.js",
        ]}
      >
        <Palette slot="icon" class="size-6 text-purple-400" />
      </SkillCard>

      {/* Backend */}
      <SkillCard
        title="Backend & Database"
        description="APIs robustas y gestión eficiente de datos"
        stack={[
          "Node.js",
          "Fastify",
          "PostgreSQL",
          "Drizzle ORM",
          "Cloudflare Workers",
          "SQL",
        ]}
      >
        <Zap slot="icon" class="size-6 text-purple-400" />
      </SkillCard>

      {/* Web3 */}
      <SkillCard
        title="Web3 & Blockchain"
        description="Contratos inteligentes y aplicaciones descentralizadas"
        stack={["Solidity", "Vyper", "Viem & Wagmi", "Rainbowkit", "IPFS"]}
      >
        <Terminal slot="icon" class="size-6 text-purple-400" />
      </SkillCard>

      {/* Tools & Others */}
      <SkillCard
        title="Tools & Languages"
        description="Herramientas de desarrollo y lenguajes adicionales"
        stack={[
          "Git & GitHub",
          "Rust",
          "Kotlin",
          "GitHub Actions",
          "VsCode",
          "Arch Linux",
        ]}
      >
        <Github slot="icon" class="size-6 text-purple-400" />
      </SkillCard>
    </div>
  </div>
</section>
