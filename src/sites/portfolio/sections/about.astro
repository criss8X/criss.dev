---
import Card from "@/components/card.astro";
import { Clock, MapPin } from "@/components/icon.astro";
import Section from "@/components/section.astro";
import { parseHighlightsFromParagraph } from "@/lib/markdown";
import { getPortfolioLocale } from "@/locales/locale";

const { UI } = getPortfolioLocale(Astro.currentLocale);

const { location, markdown, time, title } = UI.about;

const paragraphHtml = parseHighlightsFromParagraph(markdown.paragraph);
---

<Section id="about" title={title} className="max-w-4xl">
  <Card>
    <Card variant="content" className="pt-8 pb-8">
      <div class="space-y-6">
        <p
          class="text-lg leading-relaxed text-muted-foreground text-center max-w-3xl mx-auto"
          set:html={paragraphHtml}
        />

        <div
          class="flex items-center flex-wrap justify-center gap-6 pt-4 text-sm text-muted-foreground"
        >
          <div class="flex items-center gap-2">
            <MapPin class="h-4 w-4 text-purple-400" />

            <span>{location}</span>
          </div>

          <div class="flex items-center gap-2">
            <Clock class="h-4 w-4 text-purple-400" />

            <span>{time}</span>
          </div>
        </div>
      </div>
    </Card>
  </Card>
</Section>
