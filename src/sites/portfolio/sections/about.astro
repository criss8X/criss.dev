---
import Section from "@portfolio/components/section.astro";
import Card from "@ui/card.astro";
import { Clock, MapPin } from "@ui/icon.astro";
import { location, markdown, time } from "@/content/es/about.json";
import { parseHighlightsFromParagraph } from "@/lib/markdown";
import type { LangProps } from "@/types/types";

export interface Props extends LangProps {}

const { lang } = Astro.props;

const paragraphHtml = parseHighlightsFromParagraph(markdown.paragraph);
---

<Section id="about" title="Sobre mÃ­" className="max-w-4xl">
  <Card className="bg-card/50 backdrop-blur border-border/50">
    <Card variant="content" className="pt-8 pb-8">
      <div class="space-y-6">
        <p
          class="text-lg leading-relaxed text-muted-foreground text-center max-w-3xl mx-auto"
          set:html={paragraphHtml}
        />

        <div
          class="flex items-center justify-center gap-6 pt-4 text-sm text-muted-foreground"
        >
          <div class="flex items-center gap-2">
            <MapPin class="h-4 w-4 text-purple-400" />

            <span>{location}</span>
          </div>

          <div class="flex items-center gap-2">
            <Clock class="h-4 w-4 text-purple-400" />

            <span>{time}</span>
          </div>
        </div>
      </div>
    </Card>
  </Card>
</Section>
