---
import Badge from "@/components/badge.astro";
import Card from "@/components/card.astro";
import Section from "@/components/section.astro";
import { getSkillsLocale } from "@/locales/locale";

const { SKILLS, UI } = getSkillsLocale(Astro.currentLocale);
---

<Section id="skills" title={UI.title} className="max-w-6xl">
  <div class="grid md:grid-cols-2 gap-8">
    {
      SKILLS.map(({ title, description, stack, icon: Icon }) => (
        <Card>
          <Card variant="header" className="text-center">
            <Card
              variant="title"
              className="flex items-center justify-center gap-3  text-xl"
            >
              <Icon class="size-6 text-purple-400" />

              {title}
            </Card>

            <Card variant="description" className="text-base">
              {description}
            </Card>
          </Card>

          <Card variant="content">
            <div class="flex flex-wrap gap-2 justify-center">
              {stack.map((item) => (
                <Badge>{item}</Badge>
              ))}
            </div>
          </Card>
        </Card>
      ))
    }
  </div>
</Section>
