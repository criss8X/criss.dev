---
import Badge from "@ui/badge.astro";
import { ArrowRight } from "@ui/icon.astro";
import LinkButton from "@ui/link.astro";
import { getLocaleBySite } from "@/locales/locale";
import type { LangProps } from "@/types/types";

export interface Props extends LangProps {}

const { lang } = Astro.props;

const { content, ui } = getLocaleBySite("portfolio", lang);

const { description, mainSkills, mainStack } = content.hero;
const { contactButton, projectsButton } = ui.hero;
---

<section class="container mx-auto max-w-6xl px-4 py-24 md:py-32">
  <div class="flex flex-col items-center text-center space-y-8">
    <div class="space-y-6">
      <div class="text-sm text-purple-400 mb-4">
        {"~/portfolio $ whoami"}
      </div>

      <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold tracking-tight">
        <span class="text-purple-400">{">"}</span>
        <span class="text-foreground">Cristian</span>
        <br />
        <span class="text-purple-400">{">"}</span>
        <span class="text-foreground">Carralero</span>
      </h1>

      <p
        class="text-lg md:text-xl text-muted-foreground max-w-2xl mx-auto leading-relaxed"
      >
        <span class="text-purple-300">{mainStack}</span>

        <br />
        {description}
      </p>
    </div>

    <div class="flex flex-wrap gap-3 justify-center max-w-3xl">
      {
        mainSkills.map((skill) => (
          <Badge variant="secondary" className="text-sm px-3 py-1">
            {skill}
          </Badge>
        ))
      }
    </div>

    <div class="flex flex-col sm:flex-row gap-4 pt-6">
      <LinkButton size="lg" href="#contact" className="group">
        <span class="leading-relaxed">{contactButton}</span>

        <ArrowRight
          class="ml-0.5 h-4 w-4 group-hover:translate-x-1 transition-transform"
        />
      </LinkButton>

      <LinkButton variant="outline" size="lg" href="#projects">
        {projectsButton}
      </LinkButton>
    </div>
  </div>
</section>
