---
import Section from "@portfolio/components/section.astro";
import Card from "@ui/card.astro";
import { Clock, Github, Linkedin, Mail } from "@ui/icon.astro";
import LinkButton from "@ui/link.astro";
import { assertLocale } from "@/lib/error";
import { parseHighlightsFromParagraph } from "@/lib/markdown";
import { getLocaleBySite } from "@/locales/locale";

const lang = assertLocale(Astro.currentLocale);
const { content, ui } = getLocaleBySite("portfolio", lang);

const { contactDescription, label } = content.contact;
const { sendMessageBtn } = ui.contact;

const descHtml = parseHighlightsFromParagraph(contactDescription);
---

<Section id="contact" title="Contacto" className="max-w-4xl">
  <Card className="bg-card/50 backdrop-blur border-border/50 max-w-2xl mx-auto">
    <Card variant="content" className="pt-8 pb-8">
      <div class="space-y-6">
        <div class="text-sm text-purple-400 mb-4">
          {"~/contact $ let's_build_something_amazing"}
        </div>

        <p class="text-lg text-muted-foreground" set:html={descHtml} />

        <div
          class="flex items-center justify-center gap-2 text-sm text-muted-foreground"
        >
          <Clock class="h-4 w-4 text-green-400" />

          <span class="leading-relaxed">{label}</span>
        </div>

        <div class="flex flex-col sm:flex-row justify-center gap-4 pt-4">
          <LinkButton
            href="mailto:carralerocristianx@gmail.com"
            className="group"
          >
            <Mail class="h-4 w-4" />

            {sendMessageBtn}
          </LinkButton>

          <LinkButton
            href="https://www.linkedin.com/in/carralerocristianx/"
            target="_blank"
            variant="outline"
          >
            <Linkedin class="h-4 w-4 mr-2" />

            LinkedIn
          </LinkButton>

          <LinkButton
            href="https://github.com/criss8X"
            target="_blank"
            variant="outline"
          >
            <Github class="h-4 w-4 mr-2" />

            GitHub
          </LinkButton>
        </div>
      </div>
    </Card>
  </Card>
</Section>
